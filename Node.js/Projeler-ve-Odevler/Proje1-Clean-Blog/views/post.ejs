<%- include('partials/_headers')-%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation')-%>

  <!-- Page Header -->
  <%- include('partials/_page-header')-%>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h2 class="section-heading text-center mb-5 mt-5"><%= post.title %> </h2>
          <p><%= post.detail %></p>
          <hr class="col-5 mt-5">
          <p class="text-right text-info"><%= new Date(post.dateCreated).toLocaleString() %> </p>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer')-%>

</body>

</html>
