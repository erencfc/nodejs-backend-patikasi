<%- include('partials/_headers')-%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation')-%>

  <!-- Page Header -->
  <%- include('partials/_page-header')-%>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form method="POST" action="/posts/<%= post._id %>?_method=PUT" novalidate >
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <input value="<%= post.title %> " name="title" type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Detail</label>
              <textarea name="detail" rows="5" class="form-control" placeholder="Message" id="message" required data-validation-required-message="Please enter a message."><%= post.detail %> </textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton" style="margin-bottom: 30px;">Update</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer')-%>
  
  <!-- Contact Form JavaScript -->
  <script src="../public/js/jqBootstrapValidation.js"></script>
  <script src="../public/js/contact_me.js"></script>

</body>

</html>
